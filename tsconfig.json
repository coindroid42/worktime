{
  "compileOnSave": false,

  "exclude": [
    "node_modules", "src/test/*.spec.ts"
  ],
  "include": [
    "src/**/*.ts"
  ],
  "compilerOptions": {
    "rootDir": "",
    "sourceRoot": "src",
    "declarationMap": true,
    "inlineSources": true,
    "types": [
      "mocha","node"
    ],
    "baseUrl": "./",
    "outDir": "./dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitReturns": true,
    "esModuleInterop":true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true,
    "declaration": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "es2020",
    "lib": [
      "es2018",
      "dom"
    ]
  }
}